{
  "name": "paulocarvajal/base-plugin",
  "description": "A brief description of the plugin.",
  "version": "1.0.0",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Paulo Carvajal",
      "email": "hola@paulocarvajal.com"
    }
